<p id="notice"><%= notice %></p>

<h1>Index</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Id</th>
      <th>Admin?</th>
      <th>Goals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.id %></td>
        <td><%= user.admin? %></td>
        <td>Goals will go here</td>
        
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

